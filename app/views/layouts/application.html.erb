<!DOCTYPE html>
<html>
  <head>
    <title>Depot</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= csrf_meta_tags %>
  </head>

  <body id="store">
  <div id="banner">
    <%= image_tag("logo.png") %>
    <%= @page_title || t('.title') %>
  </div>
  <div id="columns">
    <div id="side">
      <div id="cart">
        <% if @cart %>
        <%= hidden_div_if(@cart.line_items.empty?, :id => "cart") do %>
           <%= render @cart %>
            <% end %>
        <% end %>
      </div>
      <a href="#"></a>Home<br>
      <a href="#"></a>Question<br>
      <a href="#"></a>News<br>
      <a href="#"></a>Contract<br>
      <% if session[:user_id] %>
          <br>
          <%= link_to 'Orders', orders_path %>
          <br>
          <%= link_to 'Product',products_path %>
          <br>
          <%= link_to 'User', users_path %>
          <br>
          <%=  button_to 'logout ',login_path, :method => :delete %>
      <% end %>
    </div>
    <div id="main">
      <%= yield %>
    </div>
  </div>
  </body>
</html>
